#include<stdio.h>
struct fraction
{
	int num;
	int den;
};
void input1(struct fraction *f1)
{
	printf("enter the numerator");
	scanf("%d",&f1->num);
	printf("enter the denominator");
	scanf("%d",&f1->den);
}
void input2(struct fraction *f2)
{
	printf("enter the numerator");
	scanf("%d",&f2->num);
	printf("enter the denominator");
	scanf("%d",&f2->den);
}
struct fraction compute(struct fraction f1,struct fraction f2)
{
	struct fraction fs;
	fs.num=(f1.num*f2.den)+(f2.num*f1.den);
	fs.den=(f1.den*f2.den);
	return fs;
}
void output(struct fraction fs)
{
	printf("%d/%d is the fraction",fs.num,fs.den);
} 
int main()
{	
	struct fraction fr1,fr2,frs;
	input1(&fr1);
	input2(&fr2);
	frs=compute(fr1,fr2);
	output(frs);
}
